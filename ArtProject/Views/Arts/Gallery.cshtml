@model IEnumerable<ArtProject.Models.Art>

@{
    ViewData["Title"] = "Gallery";
}

<h1 class="text-center text-uppercase mt-5">Art Gallery</h1>

<p class="text-center">
    <a class="text-decoration-none underline" asp-action="Create">Create New</a> | <a class="text-decoration-none underline" asp-action="Index">See Index</a>
</p>

<div class="row m-1">
    @{var counter = 1; }
    @foreach (var item in Model){
      <div class="col">
          <a asp-action="Details" asp-route-id="@item.Id">
              <img class="shadow p-3 mb-5 bg-white rounded" src="@("~/images/"+item.ImageName)" asp-append-version="true" width="400px"/>
          </a>
      </div>
      if(counter % 3 == 0){
        @:</div> <div class="row m-1">
      }
      counter++;
    }
    </div>
</div>
