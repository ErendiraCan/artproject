@model ArtProject.Models.Art

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-uppercase text-center mt-5">Delete Painting</h1>
<h4 class="text-center mb-3">Are you sure you want to delete @Html.DisplayFor(model => model.Title) by <i>@Html.DisplayFor(model => model.Artist)</i>?</h4>

<div class="text-center">
    <img class="img-fluid shadow p-3 m-2 bg-white" src="@("~/images/"+Model.ImageName)" asp-append-version="true"/>
</div>
<div class="text-center m-3">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this painting?');" /> |
        <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
